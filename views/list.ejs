<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/list.css">
    <link rel="shortcut icon" href="images/icon.png" type="image/x-icon">


    <title>Document</title>
</head>

<body>
    <div class="main">
        <div class="box" id="heading">
            <h1>
                <%= listName %>
            </h1>
        </div>

        <div class="box" id="items">
            <ul>
                <% newListItem.forEach(function(arrayElement){%>
                    <form action="/delete" method="post">
                        <div class="item">
                            <input type="checkbox" name="checkBox" value="<%=arrayElement._id%>"
                                onchange="this.form.submit()">
                            <p>
                                <%= arrayElement.item %>
                            </p>
                            <input type="hidden" name="list" value="<%=listName%>">
                        </div>
                    </form>
                    <% }); %>
            </ul>
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" id="" placeholder="new Item">
                <button type="submit" name="list" value="<%= listName %>">+</button>
            </form>
        </div>
    </div>
</body>

</html>